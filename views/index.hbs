{{> indexHeader}}
      <div
        style='background-image: url(/img/cover5.jpg);'
        class='cover bg-cover bg-center bg-no-repeat mb-8 h-full flex items-center justify-center'
      >
        <div class='flex flex-col items-center justify-center gap-5'>
          <h1 class='text-white font-extrabold text-5xl'>Welcome to
            <span class='text-red-700'>EXRESS RESERVE</span></h1>
          <div class='text-white font-extrabold text-2xl'>Do your booking easier
            for any events</div>
        </div>
      </div>
      <div
        class='main-container flex flex-wrap gap-10 items-center mx-auto p-4 px-[30px]'
      >
      {{#each events}}
        <div
          class='w-[270px] bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mt-4'
        >
          <a href='#'>
            <img class='rounded-t-lg h-[200px] object-cover w-[100%]' src="{{this.image}}" alt='' />
          </a>
          <div class='p-5 flex flex-col gap-2'>
            <a href='#'>
              <h5
                class='mb-2 text-2xl font-bold text-sm tracking-tight text-white-900 dark:text-white'
              >{{this.title}}</h5>
            </a>
            <div class='flex flex-col gap-2'>
              <div class='flex justify-between'>
                <p class='text-grey text-xs'>Begin:
                  <span class='font-bold text-xs'>{{this.eventStart}}</span></p>
                <p class='text-grey text-xs'>End:
                  <span class='font-bold text-xs'>{{this.eventEnd}}</span></p>
              </div>
              
            </div>
            <div class='flex flex-col gap-2'>
              <div class='flex justify-between'>
                <p class='text-grey text-xs'>start at:
                  <span class='font-bold text-xs'>{{this.startTime}}</span></p>
                <p class='text-grey text-xs'>End at:
                  <span class='font-bold text-xs'>{{this.endTime}}</span></p>
              </div>
              <div class='flex justify-between'>
                <p class='text-grey text-xs'>Location:
                  <span class='font-bold text-xs'>{{this.location}}</span></p>
                <p class='text-grey text-sm'>Remain ticket :
                  <span class='font-bold text-xs'>20</span></p>
              </div>
            </div>
            <p
              class='mb-3 font-normal text-gray-500 dark:text-white-400 text-sm'
            >{{this.description}}</p>
            <a
              href='/event/{{this._id}}'
              class='inline-flex justify-center items-center px-3 py-2 text-sm font-medium text-center text-white bg-purple-700 rounded-lg hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-800'
            >
              Book your place
            </a>
          </div>
        </div>
       {{/each}}
      </div>

