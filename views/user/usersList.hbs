<div class="relative overflow-x-auto  sm:rounded-lg p-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    email
                </th>
                <th scope="col" class="px-6 py-3">
                    Is Admin
                </th>
                <th scope="col" class="px-6 py-3">
                    Favarites
                </th>
                <th scope="col" class="px-6 py-3">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
           {{#each allUsers}}
                     <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{this.name}}
                </th>
                <td class="px-6 py-4">
                    {{this.email}}
                </td>
                <td class="px-6 py-4">
                    {{this.isAdmin}}
                </td>
                <td class="px-6 py-4">
                    {{this.favorites}}
                </td>
                <td class="px-6 py-4 flex">
                    <a href="/user/updateUserForm/{{this._id}}" class="font-medium text-grey-600 dark:text-grey-500 hover:underline">Edit</a>
                    <form action="/user/delete/{{this._id}}" method="post" class="font-medium text-red-600 dark:text-red-500 hover:underline mx-3">
                        <button>delete</button>
                    </form>
                    <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">detail</a>
                </td>
            </tr>
            
           {{/each}}
        </tbody>
    </table>
</div>



